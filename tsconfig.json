{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["ESNext"],
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "declarationDir": "./dist"
    },
    "$schema": "https://www.schemastore.org/tsconfig",
    "include": ["index.ts"],
    "exclude": ["node_modules", "dist"]
}
